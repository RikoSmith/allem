<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Сотрудники - Панель администратора</title>

    <%- include('_top-head-requires') %>

</head>

<body>

    <div id="wrapper">

        <!-- Navigation -->
        <%- include('_nav-top-side') %>
        <!-- DataTables CSS -->
        <link href="../sb-admin/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">

        <!-- DataTables Responsive CSS -->
        <link href="../sb-admin/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Сотрудники</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Список всех сотрудников
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table width="100%" class="table table-striped" id="dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Фото</th>
                                        <th>Фамилия</th>
                                        <th>Имя</th>
                                        <th>Отчество</th>
                                        <th>Должность</th>
                                        <th>Отдел</th>
                                        <th>Телефон</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (members) { %>
                                      <% for(var i=0; i < members.length; i++){ %>
                                        <tr class="">
                                            <td><img src="../images/members_small/<%= members[i].image %>.jpg" height="50"></td>
                                            <td><%= members[i].lastname %></td>
                                            <td><%= members[i].name %></td>
                                            <td><%= members[i].middlename %></td>
                                            <td><%= members[i].position %></td>
                                            <td><%= members[i].department %></td>
                                            <td><%= members[i].phone %></td>
                                            <td><a href="../../admin/member/<%= members[i]._id %>">Подробнее...</a></td>
                                        </tr>
                                      <% } %>
                                    <% } %>
                                </tbody>
                            </table>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <%- include('_bottom-body-requires') %>

    <!-- DataTables JavaScript -->
    <script src="../sb-admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="../sb-admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="../sb-admin/vendor/datatables-responsive/dataTables.responsive.js"></script>

    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });
    </script>

</body>

</html>
